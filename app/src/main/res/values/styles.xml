<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="mainPageLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">#FA4E68</item>
        <item name="textColor">#000000</item>
        <item name="button">#DF1212</item>
        <item name="bgColor">#ffffff</item>
        <item name="settingsColor">#000000</item>
        <item name="colorAccent">#DF1212</item>
        <item name="windowActionBar">false</item>
        </style>
    <style name="mainPageDark" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">#000000</item>
        <item name="colorPrimaryDark">#000000</item>
        <item name="textColor">#ffffff</item>
        <item name="button">@color/colorAccent</item>
        <item name="bgColor">#000000</item>
        <item name="settingsColor">#ffffff</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
    </style>


</resources>